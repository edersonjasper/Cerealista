<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>com.sun.faces.verifyObjects</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>com.sun.faces.validateXml</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>cerealista.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>relDespesa</servlet-name>
        <servlet-class>report.relDespesa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>relOrdem</servlet-name>
        <servlet-class>report.relOrdem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>relProdutoOrdem</servlet-name>
        <servlet-class>report.relProdutoOrdem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>relVenda</servlet-name>
        <servlet-class>report.relVenda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>relPagamentoFuncionario</servlet-name>
        <servlet-class>report.relPagamentoFuncionario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>relOrdemProdutoComprado</servlet-name>
        <servlet-class>report.relOrdemProdutoComprado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>relVendaProduto</servlet-name>
        <servlet-class>report.relVendaProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.faces</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relDespesa</servlet-name>
        <url-pattern>/relDespesa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relOrdem</servlet-name>
        <url-pattern>/relOrdem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relProdutoOrdem</servlet-name>
        <url-pattern>/relProdutoOrdem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relVenda</servlet-name>
        <url-pattern>/relVenda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relPagamentoFuncionario</servlet-name>
        <url-pattern>/relPagamentoFuncionario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relOrdemProdutoComprado</servlet-name>
        <url-pattern>/relOrdemProdutoComprado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>relVendaProduto</servlet-name>
        <url-pattern>/relVendaProduto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>240</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>forwardToJSF.jsp</welcome-file>
    </welcome-file-list>
</web-app>
